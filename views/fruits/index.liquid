{% layout "layout.liquid" %}
{% block content %}
<a href="/fruits/new"><button>Create a New Fruit</button></a>
<div>
    {% for fruit in fruits %}
        <article>
            <a href="/fruits/{{ fruit._id }}">
                <h2>{{fruit.name}} - 
                    {% if fruit.readyToEat == true%}
                        Ripe
                    {% else %}
                        Not Ripe
                    {% endif %}
                </h2>
            </a>
        </article>
    {% endfor %}
</div>

{% endblock %}