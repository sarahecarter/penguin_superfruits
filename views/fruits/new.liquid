{% layout "layout.liquid" %}
{% block content %}
    <div>
        <form action="/fruits" method="post">
            <fieldset>
                <legend>Create a New Fruit</legend>
                <label>Name: <input type="text" name="name" placeholder="enter fruit name"></label>
                <label>Color: <input type="text" name="color" placeholder="enter fruit color"></label>
                <label>Ready to Eat? <input type="checkbox" name="readyToEat"></label>
                <input type="submit" value="Create a New Fruit">
            </fieldset>
        </form>
    </div>
{% endblock %}